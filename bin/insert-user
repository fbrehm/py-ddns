# Standard modules
import sys
import os

# own modules:
cur_dir = os.getcwd()
base_dir = cur_dir

if sys.argv[0] != '' and sys.argv[0] != '-c':
    cur_dir = os.path.dirname(sys.argv[0])
if os.path.exists(os.path.join(cur_dir, '..', 'lib', 'py_ddns')):
    sys.path.insert(0, os.path.abspath(os.path.join(cur_dir, '..', 'lib')))

from py_ddns.insert_user import DynDnsInsertUserApp

__author__ = 'Frank Brehm <frank@brehm-online.com>'
__copyright__ = '(C) 2010 - 2014 by Frank Brehm, Berlin'

app = DynDnsInsertUserApp()

if app.verbose > 2:
    print((_("DynDnsInsertUserApp object:") + (("\n%s") % (app))))

app()

sys.exit(0)

